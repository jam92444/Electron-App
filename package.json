{
  "name": "ackidswear-billing-desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "cd renderer && npm run build",
    "dist": "npm run build && electron-builder -c electron-builder.config.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "react-chartjs-2": "^5.3.1"
  },
  "build": {
    "chunkSizeWarningLimit": 1200,
    "rollupOptions": {
      "output": {
        "manualChunks": {
          "vendor": [
            "react",
            "react-dom"
          ],
          "select": [
            "react-select"
          ],
          "locationData": [
            "country-state-city"
          ]
        }
      }
    }
  }
}
